@model HDPaymentByDateVm
<form data-name="frmDongLaiTheoNgay" asp-action="CreateHDPaymentByDate" method="post">
    <div class="form-group row">
        <input type="hidden" asp-for="HdId" />
        <label class="col-lg-4 col-sm-12 col-12">
            Lãi từ ngày
        </label>
        <div class="col-lg-3">
            <span>@Model.FromDate.ToString("dd/MM/yyyy")</span>
            <input type="hidden" asp-for="FromDate" name="FromDate" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-4 col-sm-12 col-12">
            Đến ngày
        </label>
        <div class="col-lg-3">
            <input type="date" class="form-control" name="ToDate" value="@Model.ToDate.ToString("yyyy-MM-dd")" onchange="changePaymentDate(this,@Model.HdId)" />
        </div>
        <div class="col-lg-3">
            (Ngày đóng lãi tiếp : @Model.NgayDongLaiTiepTheo.ToString("dd/MM/yyyy"))
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-4 col-sm-12 col-12">
            Số ngày
        </label>
        <div class="col-lg-3">
            <input class="form-control" asp-for="CountDay" name="CountDay" id="CountDay" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-4 col-sm-12 col-12">
            Tiền lãi
        </label>
        <div class="col-lg-3">
            <span class="tienlai">@Model.MoneyInterest.ToString("N0") VNĐ</span>
            <input type="hidden" asp-for="MoneyInterest" />
            <input type="hidden" asp-for="MoneyPay" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-4 col-sm-12 col-12">
            Tiền khác
        </label>
        <div class="col-lg-3">
            <div class="input-group">
                <input class="form-control money-textbox" asp-for="MoneyOther">
                <input type="hidden" />
                <div class="input-group-append">
                    <span class="input-group-text">VNĐ</span>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-4 col-sm-12 col-12">
            Tổng tiền lãi
        </label>
        <div class="col-lg-3">
            <span class="tongtienlai">@Model.MoneyPayNeed.ToString("N0") VNĐ</span>
            <input type="hidden" asp-for="MoneyPayNeed" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-4 col-sm-12 col-12">
            Tiền khách đưa
        </label>
        <div class="col-lg-3">
            <div class="input-group">
                <input class="form-control money-textbox" name="CustomerPay" id="CustomerPay" asp-for="CustomerPay">
                <input type="hidden" />
                <div class="input-group-append">
                    <span class="input-group-text">VNĐ</span>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-4 col-sm-12 col-12"></label>
        <div class="col-lg-3">
            <button class="btn btn-primary btn-sm" type="submit"><i class="fas fa-thumbs-up"></i> Đóng lãi</button>
        </div>
    </div>
</form>