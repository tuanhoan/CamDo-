</div>

<div class="row">
    <!-- table  Lastest Tickets -->
    <div class="col-12 ">
        <div class="card shadow h-100 mb-4 ">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="m-0 font-weight-bold">@ViewData["Title"]</h5>
                @*<button type="button" class="btn btn-primary btn-sm createHopDong" data-id="0" data-url="@Url.Action("MuaBaoHiem","DichVu")">Thêm bh mới</button>*@
                @*<a class="btn btn-primary btn-sm" data-bs-toggle="modal" data-target="#modal_create_BuyInsurance">+ Thêm mới</a>*@
                <button type="button" class="btn btn-primary btn-sm" id="btnAddBaoHiem">+ Thêm mới</button>
            </div>
            <div class="card-body">
                <div class="row ">
                    <div class="col-md-12">

                        <div class="mb-2">
                            <button class="btn btn-primary btn-sm me-5"> Nạp tiền</button>
                            <span class="ms-5">$ Số dư ví <span class="text-danger">0</span> VND</span>
                            <span class="float-right"> Tổng số 0 khách hàng</span>
                            <div class="mt-2">
                                <a class="text-sm" href="#">Hợp đồng sử dụng</a>
                            </div>
                        </div>
                        <div>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th scope="col">
                                            STT
                                        </th>
                                        <th scope="col">
                                            Khách hàng
                                        </th>
                                        <th scope="col">
                                            Ngày đăng ký
                                        </th>
                                        <th scope="col">
                                            Loại bảo hiểm
                                        </th>
                                        <th scope="col">
                                            Doanh thu
                                        </th>
                                        <th scope="col">
                                            Đã nộp
                                        </th>
                                        <th scope="col">
                                            Chiết khấu được hưởng
                                        </th>
                                        <th scope="col">
                                            Trạng thái
                                        </th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        var index = 1;
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@index</td>
                                                <td>@item.Ten</td>
                                                <td>@item.StartDate.ToString("dd/MM/yyyy")</td>
                                                <td>@item.Type.ToString()</td>
                                                <td>@item.TienBaoHiem.ToString("N0")</td>
                                                <td>@item.TongTien.ToString("N0")</td>
                                                <td>@item.TienChietKhau.ToString("N0")</td>
                                                <td>Đang chờ mua</td>
                                                <td></td>
                                            </tr>
                                            index++;
                                        }
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td>Tổng</td>
                                        <td>@Model.Sum(x=>x.TienBaoHiem).ToString("N0")</td>
                                        <td>@Model.Sum(x=>x.TongTien).ToString("N0")</td>
                                        <td>@Model.Sum(x=>x.TienChietKhau).ToString("N0")</td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

