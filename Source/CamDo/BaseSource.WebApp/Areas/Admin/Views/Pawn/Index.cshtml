
<div class="row">
    <!-- table  Lastest Tickets -->
    <div class="col-12  ">
        <div class="card shadow h-100 mb-4 ">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3 class="m-0 font-weight-bold">@ViewData["Title"]</h3>
                <button type="button" class="btn btn-primary btn-sm" data-url="@Url.Action("Create")" onclick="addContractPawn(this,0)">Thêm mới</button>
            </div>
            <div class="card-body">
                <form asp-action="Index" method="get" class="mb-4">

                    <div class="form-group row">
                        <label for="username" class="col-sm-2 font-weight-bolder text-dark col-form-label">Tên</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="ten" value="@Context.Request.Query["ten"]">
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-2"></div>
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary btn-sm">
                                <i class="fas fa-search"></i>
                                <span class="ml-1">Tìm kiếm</span>
                            </button>
                            <a asp-action="Index" class="btn btn-success btn-sm ml-2">
                                <i class="fas fa-sync-alt"></i>
                                <span class="ml-1">Reset</span>
                            </a>
                        </div>
                    </div>
                </form>
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">
                                    Lĩnh vực
                                </th>
                                <th scope="col">
                                    Tên hàng hóa
                                </th>
                                <th scope="col">
                                    Mã
                                </th>
                                <th scope="col">
                                    Tiền cầm
                                </th>
                                <th scope="col">
                                    Lãi suất
                                </th>
                                <th scope="col">
                                    Kỳ lãi
                                </th>
                                <th scope="col">
                                    Thanh lý sau
                                </th>
                                <th scope="col">
                                    Tình trạng
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="pawn-modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lager" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Thêm mới hợp đồng</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/admin/js/contract-pawn.js"></script>
    <script>
        $(".cauhinhhanghoa-nav").addClass("active");
    </script>
}
