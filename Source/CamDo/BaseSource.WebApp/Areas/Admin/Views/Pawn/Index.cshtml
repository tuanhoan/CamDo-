@model PagedResult<HopDongVm>
@{
    ViewData["Title"] = "Hợp đồng cầm đồ";
    var listHangHoa = ViewData["ListHangHoa"] as SelectList;
}
<div class="row">
    <!-- table  Lastest Tickets -->
    <div class="col-12 ">
        <div class="card shadow h-100 mb-4 ">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3 class="m-0 font-weight-bold">@ViewData["Title"]</h3>

            </div>
            <div class="card-body">
                <div class="row clearfix">
                    <div class="m--margin-top-10 col-md-6" id="dvMoneyEndDate">
                        <div class="body-box">
                            <div> QUỸ TIỀN MẶT <a style="cursor:pointer;" onclick="ReloadMoneyDataShop()"><i class="flaticon-share m--font-danger" title="Reload dữ liệu"></i></a>  </div>
                            <h4 id="lbl_LoanPawn_MoneyEndDate">1,000,407,050</h4>
                        </div>
                    </div>
                    <div class="m--margin-top-10 col-md-6" id="dvMoneyInvestment">
                        <div class="body-box">
                            <span>TIỀN CHO VAY</span>
                            <h4 id="lbl_LoanPawn_MoneyInvestment">0</h4>
                        </div>
                    </div>
                    <div class="m--margin-top-10 col-md-4" id="dvMoneyDebtor">
                        <div class="body-box">
                            <span>TIỀN NỢ</span>
                            <h4 id="lbl_LoanPawn_MoneyDebtor">0</h4>
                        </div>
                    </div>
                    <div class="m--margin-top-10 col-md-4" id="dvInterestExpected">
                        <div class="body-box m--bg-brand">
                            <span id="lbl_interestToDay">LÃI DỰ KIẾN </span>
                            <h4 id="lbl_LoanPawn_InterestExpected">0</h4>
                        </div>
                    </div>
                    <div class="m--margin-top-10 col-md-4" id="dvInterestEarned">
                        <div class="body-box" data-html="true" data-bs-toggle="m-tooltip" title="" data-placement="top" data-original-title="Tổng tiền lãi trong tháng 8 năm 2022 ">
                            <span>LÃI ĐÃ THU</span>
                            <h4 id="lbl_LoanPawn_InterestEarned">0</h4>
                        </div>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-12 d-flex">
                        <button type="button" class="btn btn-primary btn-sm addEditHD" data-id="0" data-url="@Url.Action("Create","HopDong")">Thêm mới</button>
                        <form action="@Url.Action("Export","HopDong")" method="post">
                            <input type="hidden" name="loaiHD" value="@ELoaiHopDong.Camdo" />
                            <input type="hidden" class="form-control" name="info" value="@Context.Request.Query["info"]">
                            <input type="hidden" class="form-control" name="from" value="@Context.Request.Query["from"]">
                            <input type="hidden" class="form-control" name="to" value="@Context.Request.Query["to"]">
                            <input type="hidden" class="form-control" name="loaihanghoa" value="@Context.Request.Query["loaihanghoa"]">
                            <input type="hidden" class="form-control" name="status" value="@Context.Request.Query["status"]">

                            <button type="submit" id="btnExportExcel" class="btn btn-info btn-sm mx-sm-3"> <i class="fas fa-file-export"></i> Xuất Excel</button>
                        </form>
                        <button type="button" class="btn btn-primary btn-sm mx-sm-1" data-id="0" data-url="@Url.Action("Create","HopDong")">Chọn mẫu hợp đồng</button>
                    </div>
                </div>
                <form asp-action="Index" id="frmSearch" method="get" class="form-inline mb-4">
                    <div class="form-group mb-2">
                        <input type="text" class="form-control" name="info" value="@Context.Request.Query["info"]" placeholder="Tìm kiếm mã HĐ, Tên KH...">
                    </div>
                    <div class="form-group mx-sm-3 mb-2">
                        <input type="date" class="form-control" name="from" value="@Context.Request.Query["from"]">
                    </div>
                    <div class="form-group mx-sm-3 mb-2">
                        <input type="date" class="form-control" name="to" value="@Context.Request.Query["to"]">
                    </div>
                    <div class="form-group mx-sm-3 mb-2">
                        @Html.DropDownList("loaihanghoa", listHangHoa, "---Tất cả---", new { @class = "form-control" })
                    </div>
                    <div class="form-group mx-sm-3 mb-2">
                        @Html.DropDownList("status", Html.GetEnumSelectList<EHopDong_CamDoStatusFilter>(), "---Tất cả---", new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-primary btn-sm mb-2"> <i class="fas fa-search"></i> Tìm kiếm</button>
                    <a asp-action="Index" class="btn btn-success btn-sm mx-sm-1 mb-2">
                        <i class="fas fa-sync-alt"></i> Reset
                    </a>
                </form>
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">
                                    #
                                </th>
                                <th scope="col">
                                    Mã HĐ
                                </th>
                                <th scope="col">
                                    Khách Hàng
                                </th>
                                <th scope="col">
                                    Mã TS
                                </th>
                                <th scope="col">
                                    Tài sản
                                </th>
                                <th scope="col">
                                    Tiền cầm
                                </th>
                                <th scope="col">
                                    Ngày cầm
                                </th>
                                <th scope="col">
                                    Lãi đã đóng
                                </th>
                                <th scope="col">
                                    Tiền nợ
                                </th>
                                <th scope="col">
                                    Lãi đến hôm nay
                                </th>
                                <th scope="col">
                                    Ngày phải đóng lãi
                                </th>
                                <th scope="col">
                                    Tình trạng
                                </th>
                                <th>Chức năng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Items.Count > 0)
                            {
                                int idx = 1;
                                foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td>@idx</td>
                                        <td>@item.HD_Ma</td>
                                        <td>
                                            <p class="addEditHD hd_tenkhachang" data-id="@item.Id" data-url="@Url.Action("Edit","HopDong")">@item.TenKhachHang</p>
                                            <p class="font-12"><i class="fas fa-phone-alt"></i> @item.SDT</p>
                                        </td>
                                        <td>@item.MaTaiSan</td>
                                        <td>@item.TenTaiSan</td>
                                        <td>
                                            @item.HD_TongTienVayBanDau.ToString("N0")
                                            <p class="hd_laisuat">@item.TyLeLai</p>
                                        </td>
                                        <td>
                                            @item.HD_NgayVay.ToString("dd/MM/yyyy")
                                            <p>(@item.TongSoNgayVay ngày)</p>
                                        </td>
                                        <td>@item.TongTienLaiDaThanhToan.ToString("N0")</td>
                                        <td>0</td>
                                        <td>0</td>
                                        <td>@item.HD_NgayVay.ToString("dd/MM/yyyy")</td>
                                        <td><span class="m-badge m-badge--info m-badge--wide">@item.StatusName</span></td>
                                        <td width="140" class="text-center">
                                            <button class="btn btn-xs btn-secondary detaileHD m-1" type="button" data-id="@item.Id" data-url="@Url.Action("Detail","HopDong")" title="Đóng lãi">
                                                <i class="fas fa-coins"></i>
                                            </button>
                                            <button class="btn btn-xs btn-danger m-1" type="button" data-bs-toggle="btn-confirm" data-title="Bạn có chắc chắn muốn xóa hợp đồng?" data-href="@Url.Action("Delete","HopDong", new { id = item.Id })" title="Xóa hợp đồng">
                                                <i class="fas fa-trash-alt fa-fw"></i>
                                            </button>
                                            <button class="btn btn-xs btn-info detaileHD m-1" data-tab="tab-chuocdo" type="button" data-id="@item.Id" data-url="@Url.Action("Detail","HopDong")" title="Chuộc đồ">
                                                <i class="fas fa-anchor"></i>
                                            </button>
                                            <button class="btn btn-xs btn-success detaileHD m-1" data-tab="tab-hengio" type="button" data-id="@item.Id" data-url="@Url.Action("Detail","HopDong")" title="Hẹn giờ khoản vay">
                                                <i class="fas fa-clock"></i>
                                            </button>
                                        </td>
                                    </tr>
                                    idx++;
                                }

                            }
                            else
                            {
                                <tr>
                                    <td colspan="13" class="text-center">Không có dữ liệu</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>
@section Scripts{

    <script>
        $(".cauhinhhanghoa-nav").addClass("active");
    </script>
}
<div class="modal fade" id="hd-modal" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lager" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
            </div>
        </div>
    </div>
</div>