@model PagedResult<HopDongVm>
@{
    ViewData["Title"] = "Hợp đồng cầm đồ";
    var listHangHoa = ViewData["ListHangHoa"] as SelectList;
}
<div class="row">
    <!-- table  Lastest Tickets -->
    <div class="col-12 ">
        <div class="card shadow h-100 mb-4 ">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3 class="m-0 font-weight-bold">@ViewData["Title"]</h3>

            </div>
            <div class="card-body">
                <div class="asyncPartial" data-url="@Url.Action("ReportHeader")"></div>

                <div class="row mb-2">
                    <div class="col-md-12 d-flex">
                        <button type="button" class="btn btn-primary btn-sm addEditHD" data-id="0" data-url="@Url.Action("Create","HopDong")">Thêm mới</button>
                        <form action="@Url.Action("Export","HopDong")" method="post">
                            <input type="hidden" name="loaiHD" value="@ELoaiHopDong.Camdo" />
                            <input type="hidden" class="form-control" name="info" value="@Context.Request.Query["info"]">
                            <input type="hidden" class="form-control" name="from" value="@Context.Request.Query["from"]">
                            <input type="hidden" class="form-control" name="to" value="@Context.Request.Query["to"]">
                            <input type="hidden" class="form-control" name="loaihanghoa" value="@Context.Request.Query["loaihanghoa"]">
                            <input type="hidden" class="form-control" name="status" value="@Context.Request.Query["status"]">

                            <button type="submit" id="btnExportExcel" class="btn btn-info btn-sm mx-sm-3"> <i class="fas fa-file-export"></i> Xuất Excel</button>
                        </form>
                        <button type="button" class="btn btn-primary btn-sm mx-sm-1" data-id="0" data-url="@Url.Action("Create","HopDong")">Chọn mẫu hợp đồng</button>
                    </div>
                </div>
                <form asp-action="Index" id="frmSearch" method="get" class="form-inline">
                    <div class="form-group mb-2">
                        <input type="text" class="form-control" name="info" value="@Context.Request.Query["info"]" placeholder="Tìm kiếm mã HĐ, Tên KH...">
                    </div>
                    <div class="form-group mx-sm-3 mb-2">
                        <input type="date" class="form-control" name="from" value="@Context.Request.Query["from"]">
                    </div>
                    <div class="form-group mx-sm-3 mb-2">
                        <input type="date" class="form-control" name="to" value="@Context.Request.Query["to"]">
                    </div>
                    <div class="form-group mx-sm-3 mb-2">
                        @Html.DropDownList("loaihanghoa", listHangHoa, "---Tất cả---", new { @class = "form-control" })
                    </div>
                    <div class="form-group mx-sm-3 mb-2">
                        @Html.DropDownList("status", Html.GetEnumSelectList<EHopDong_CamDoStatusFilter>(), "---Tất cả---", new { @class = "form-control" })
                    </div>

                    <div class="row mb-2">
                        <div class="col-md-12 d-flex">
                            <button type="submit" class="btn btn-primary btn-sm mb-2"> <i class="fas fa-search"></i> Tìm kiếm</button>
                            <a asp-action="Index" class="btn btn-success btn-sm mx-sm-1 mb-2">
                                <i class="fas fa-sync-alt"></i> Reset
                            </a>
                        </div>
                    </div>
                </form>

                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">
                                    #
                                </th>
                                <th scope="col">
                                    Mã HĐ
                                </th>
                                <th scope="col">
                                    Khách Hàng
                                </th>
                                <th scope="col">
                                    Mã TS
                                </th>
                                <th scope="col">
                                    Tài sản
                                </th>
                                <th scope="col">
                                    Tiền cầm
                                </th>
                                <th scope="col">
                                    Ngày cầm
                                </th>
                                <th scope="col">
                                    Lãi đã đóng
                                </th>
                                <th scope="col">
                                    Tiền nợ
                                </th>
                                <th scope="col">
                                    Lãi đến hôm nay
                                </th>
                                <th scope="col">
                                    Ngày phải đóng lãi
                                </th>
                                <th scope="col">
                                    Tình trạng
                                </th>
                                <th>Chức năng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Items.Count > 1)
                            {
                                int idx = ((Model.PageNumber - 1) * Model.PageSize + 1);
                                var index = 1;
                                foreach (var item in Model.Items)
                                {
                                    if (index <= Model.TotalItemCount)
                                    {
                                        <tr>
                                            <td>@idx</td>
                                            <td>@item.HD_Ma</td>
                                            <td>
                                                <p class="addEditHD hd_tenkhachang" data-id="@item.Id" data-url="@Url.Action("Edit", "HopDong")">@item.TenKhachHang</p>
                                                <p class="font-12"><i class="fas fa-phone-alt"></i> @item.SDT</p>
                                            </td>
                                            <td>@item.MaTaiSan</td>
                                            <td>@item.TenTaiSan</td>
                                            <td>
                                                @item.HD_TongTienVayBanDau.ToString("N0")
                                                <p class="hd_laisuat">@item.TyLeLai</p>
                                            </td>
                                            <td>
                                                @item.HD_NgayVay.ToString("dd/MM/yyyy")
                                                <p>(@item.TongSoNgayVay ngày)</p>
                                            </td>
                                            <td class="text-right">@item.TongTienLaiDaThanhToan.ToString("N0")</td>
                                            <td class="text-right">@((item.TongTienGhiNo - item.TongTienDaThanhToan).ToString("N0"))</td>
                                            <td class="text-right">@item.TienLaiToiNgayHienTai.ToString("N0")</td>
                                            <td>@item.HD_NgayVay.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                @if (item.HD_Status == (byte)EHopDong_CamDoStatusFilter.QuaHan || item.HD_Status == (byte)EHopDong_CamDoStatusFilter.DenNgayChuocDo)
                                                {
                                                    <span class="badge badge-red">@item.StatusName</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-info">@item.StatusName</span>
                                                }

                                            </td>
                                            <td width="140" class="text-center">
                                                <button class="btn btn-sm btn-secondary detaileHD m-1" type="button" data-id="@item.Id" data-url="@Url.Action("Detail", "HopDong")" title="Đóng lãi">
                                                    <i class="fas fa-coins"></i>
                                                </button>
                                                <button class="btn btn-sm btn-danger m-1" type="button" data-bs-toggle="btn-confirm" data-title="Bạn có chắc chắn muốn xóa hợp đồng?" data-href="@Url.Action("Delete", "HopDong", new { id = item.Id })" title="Xóa hợp đồng">
                                                    <i class="fas fa-trash-alt fa-fw"></i>
                                                </button>
                                                <button class="btn btn-sm btn-info detaileHD m-1" data-tab="tab-chuocdo" type="button" data-id="@item.Id" data-url="@Url.Action("Detail", "HopDong")" title="Chuộc đồ">
                                                    <i class="fas fa-anchor"></i>
                                                </button>
                                                <button class="btn btn-sm btn-success detaileHD m-1" data-tab="tab-hengio" type="button" data-id="@item.Id" data-url="@Url.Action("Detail", "HopDong")" title="Hẹn giờ khoản vay">
                                                    <i class="fas fa-clock"></i>
                                                </button>
                                                <button class="btn btn-sm btn-warning m-1" type="button" data-bs-toggle="btn-confirm" data-title="Bạn có chắc chắn muốn chuyển sang trạng thái chờ thanh lý?" data-href="@Url.Action("ChuyenTTChoThanhLy", "HopDong", new { hopDongId = item.Id })" title="Chuyển HĐ qua trạng thái chờ thanh lý">
                                                    <i class="fas fa-radiation fa-fw"></i>
                                                </button>
                                                @if (item.HD_Status == (byte)EHopDong_CamDoStatusFilter.ChoThanhLy)
                                                {
                                                    <button class="btn btn-sm btn-secondary m-1" type="button" data-bs-toggle="btn-confirm" data-title="Bạn có chắc chắn muốn chuyển sang trạng thái đang vay?" data-href="@Url.Action("ChuyenTTVeDangVay", "HopDong", new { hopDongId = item.Id })" title="Chuyển HĐ từ chờ thanh lý về đang vay">
                                                        <i class="fas fa-heart fa-fw"></i>
                                                    </button>
                                                }
                                            </td>
                                        </tr>
                                    }

                                    idx++;
                                    index++;
                                }

                            }
                            else
                            {
                                <tr>
                                    <td colspan="13" class="text-center">Không có dữ liệu</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="5" class="text-right text-danger font-weight-600">
                                    Tổng tiền
                                </td>
                                <td class="text-right text-danger font-weight-600">@Model.Items.LastOrDefault()?.HD_TongTienVayBanDau.ToString("N0")</td>
                                <td class="text-right text-danger"></td>
                                <td class="text-right text-danger font-weight-600">@Model.Items.LastOrDefault()?.TongTienLaiDaThanhToan.ToString("N0")</td>
                                <td class="text-right text-danger font-weight-600">@Model.Items.LastOrDefault()?.TienNo.ToString("N0")</td>
                                <td class="text-right text-danger font-weight-600">@Model.Items.LastOrDefault()?.TienLaiToiNgayHienTai.ToString("N0")</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                @if (Model.PageCount > 1)
                {
                    <div>
                        @await Html.PartialAsync("_Pager", new PagedResultBase()
                   {
                       PageNumber = Model.PageNumber,
                       PageSize = Model.PageSize,
                       TotalItemCount = Model.TotalItemCount,
                       PageUrl = Url.Action("Index")
                   })
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section Scripts{

    <script>
        $(".cauhinhhanghoa-nav").addClass("active");
    </script>
}
<div class="modal fade" id="hd-modal" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lager" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
            </div>
        </div>
    </div>
</div>