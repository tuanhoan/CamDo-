@model PagedResult<BaseSource.ViewModels.Friendship.FriendshipCardModel>
@{
    ViewData["Title"] = "Bạn bè";
    var ListAuth = (List<string>)ViewBag.ListAuth;
}
<div class="row">
    <!-- table  Lastest Tickets -->
    <div class="col-12 ">
        <div class="card shadow h-100 mb-4 ">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3 class="m-0 font-weight-bold">Thêm mới bạn bè</h3>
            
            </div>
            <div class="card-body">
                <form id="frmSearch" asp-action="Search" method="get" class="form-inline">
                    <div class="mb-3">
                        <input type="text" class="form-control" name="searchText" value="@Context.Request.Query["info"]" placeholder="Tìm kiếm theo Tên, email hoặc sdt">
                    </div>
                    <div class="mb-2">
                        <div class="col-md-12 d-flex">
                            <button type="submit" class="btn btn-primary btn-sm mb-2"> <i class="fas fa-search me-2"></i> Tìm kiếm</button>
                            <a asp-action="AddFriend" class="btn btn-success btn-sm mx-sm-1 mb-2">
                                <i class="fas fa-sync-alt me-2"></i> Reset
                            </a>
                        </div>
                    </div>
                </form>
                <div class="table-responsive" id="result" >
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{

<script>
    $("#frmSearch").submit(function(e) {
        e.preventDefault();
        var form = $(this);
        var actionUrl = form.attr('action');    
        $.ajax({
            type: "POST",
            url: actionUrl,
            data: form.serialize(),
            success: function(data)
            {
                $("#result").html(data);
            }
        });    
    });
</script>
}