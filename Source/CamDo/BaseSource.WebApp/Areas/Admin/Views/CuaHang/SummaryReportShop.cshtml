@model List<SummaryReportShopVM>
@{
    ViewData["Title"] = "Tổng quát các cửa hàng";
}


<div class="row">
    <!-- table  Lastest Tickets -->
    <div class="col-12  ">
        <div class="card shadow h-100 mb-4 ">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3 class="m-0 font-weight-bold">@ViewData["Title"]</h3>
            </div>
            <div class="card-body">

                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">
                                    Tên cửa hàng
                                </th>
                                <th scope="col">
                                    Quỹ tiền mặt
                                </th>
                                <th scope="col">
                                    Vốn đầu tư
                                </th>
                                <th scope="col">
                                    Cho vay cầm đồ
                                </th>
                                <th scope="col">
                                    Cho vay lãi
                                </th>
                                <th scope="col">
                                    Cho vay bát họ
                                </th>
                                <th scope="col">
                                    Lãi dự kiến
                                </th>
                                <th scope="col">Lãi đã thu</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                var idx = 1;

                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.TenCuaHang</td>
                                        <td>@item.QuyTienMat.ToString("N0")</td>
                                        <td>@item.VonDauTu.ToString("N0")</td>
                                        <td>@item.ChoVayCamDo.ToString("N0")</td>
                                        <td>@item.ChoVayLai.ToString("N0")</td>
                                        <td>@item.ChoVayBatHo.ToString("N0")</td>
                                        <td>@item.LaiDuKien.ToString("N0")</td> 
                                        <td>@item.LaiDaThu.ToString("N0")</td> 
                                    </tr>
                                    idx++;
                                }
                            }
                        </tbody>
                        <tfoot>
                            <tr class="text-danger">
                                <td>Tổng</td>
                                <td>@Model.Sum(x=>x.QuyTienMat).ToString("N0")</td>
                                <td>@Model.Sum(x=>x.VonDauTu).ToString("N0")</td>
                                <td>@Model.Sum(x=>x.ChoVayCamDo).ToString("N0")</td>
                                <td>@Model.Sum(x=>x.ChoVayLai).ToString("N0")</td>
                                <td>@Model.Sum(x=>x.ChoVayBatHo).ToString("N0")</td>
                                <td>@Model.Sum(x=>x.LaiDuKien).ToString("N0")</td> 
                                <td>@Model.Sum(x=>x.LaiDaThu).ToString("N0")</td> 
                            </tr>
                        </tfoot>
                    </table>
                </div>
                @*@if (Model.PageCount > 1)
                {
                <div>
                @await Html.PartialAsync("_Pager", new PagedResultBase()
                {
                PageNumber = Model.PageNumber,
                PageSize = Model.PageSize,
                TotalItemCount = Model.TotalItemCount,
                PageUrl = Url.Action("Index")
                })
                </div>
                }*@
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(".summaryshop-nav").addClass("active");
    </script>
}