@model BaseSource.ViewModels.Admin.ThuChi.ExportExpenseTemplateVm
<!DOCTYPE html>
<head>
    <title>Phiếu chi tiền</title>
</head>
<body>
    <style>
        body {
            margin: 0;
            font-size: 22px;
        }

        .tbl_header {
            width: 100%;
        }

        .top_contract > td {
            text-align: center;
        }

        .diachi > td {
            text-align: left;
        }

        .name_product {
            margin: 0;
        }

        .p_conghoa {
            margin: 0;
            text-transform: uppercase;
            margin-top: 3px;
            font-size: 26px
        }

        .p_doclap {
            font-size: 16px;
            text-transform: capitalize;
            margin: 0;
            font-size: 26px
        }

        .p_line {
            margin: -3px 0 0;
            font-size: 16px;
        }

        .p_normal {
            margin: 0 0 8px;
        }

        .date {
            margin: 0 0 5px;
        }

        .title_hd {
            font-size: 32px;
            text-transform: uppercase;
            font-weight: bold;
            text-align: center;
            margin: 15px 0px 0px 0px;
            position: relative;
        }

        .after_title_hd {
            text-align: center;
            margin: 0px 0px 30px 0px;
            position: relative;
        }

        .p_shopname {
            font-size: 23px;
            text-transform: uppercase;
            font-weight: bold;
        }

        .tab_line {
            display: inline-table;
            margin: 0 0 0 30px;
            padding: 0;
        }

            .tab_line > label {
                display: table-cell;
                margin: 0;
                padding: 0 15px 0 0;
            }

        .tab_line2 {
            margin-left: 70px;
        }

        .tbl_thu {
            width: 100%;
            margin-top: 5px;
        }

        .tbl_ky {
            width: 100%;
            text-align: center;
            margin-top: 20px;
        }

        .daidienky {
            margin: 0 0 5px;
            text-transform: uppercase;
        }

        .text-left {
            float: left;
        }

        .text-end {
            float: right;
        }
        .text-small{
             font-size: 13px;
        }
    </style>
    <div style="width:700px;">
        <table class="tbl_header" cellpadding="0" cellpadding="0">

            <tr class="top_contract" valign="top">
                <td>
                    <p class="p_conghoa"><b>@Model.ShopName</b></p>
                    <p class="p_doclap"><b>Hotline</b>: @Model.Hotline</p>
                </td>
                <td>
                    <p class="p_conghoa"><b>PHIẾU CHI TIỀN</b></p>
                    <p class="p_doclap"><b>Ngày</b> : @(DateTime.Now.ToString("dd/MM/yyyy"))</p>
                </td>
            </tr>
        </table>
        <br />
        <br />
        <p class="p_normal">Họ tên người nhận tiền: <b>@Model.Customer</b></p>
        <p class="p_normal">Địa chỉ: <b>@Model.Address</b></p>
        <p class="p_normal">Lý do chi tiền: <b>@Model.Note</b></p>
        <p class="p_normal">Số tiền : <b>@(Model.Amount.ToString("N0"))</b></p>
        <p class="p_normal">Bằng chữ : <b>@(Model.AmountString) đồng</b></p>
        <p class="p_normal">Người tạo : @(Model.UserName)(@(Model.CreateDate.ToString("HH:mm dd/MM/yyyy"))) Người in : @(Model.UserPrint)(@(DateTime.Now.ToString("HH:mm dd/MM/yyyy")))</p>
        <table class="tbl_ky">
            <tr>
                <td>
                    <p class="daidienky"><b>Phụ trách PGD</b></p>
                </td>
                <td>
                    <p class="daidienky"><b>Người lập phiếu</b></p>
                </td>
                <td>
                    <p class="daidienky"><b>Người nhận tiền</b></p>
                </td>
            </tr>
        </table>

    </div>
</body>
</html>