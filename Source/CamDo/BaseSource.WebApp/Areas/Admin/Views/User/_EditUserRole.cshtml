
@model RoleAssignVm

@using (Html.BeginForm("EditUserRole", "User", FormMethod.Post, new { role = "form", @id = "form-edit-role" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)

    @for (var i = 0; i < Model.Roles.Count; i++)
    {
        <div>
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" asp-for="Roles[i].Selected">
                <label class="custom-control-label" asp-for="Roles[i].Selected">@Model.Roles[i].Name</label>
                <input type="hidden" asp-for="Roles[i].Id" />
                <input type="hidden" asp-for="Roles[i].Name" />
            </div>
        </div>
    }

    <div class="clearfix">
        <div class="float-right">
            <button type="button" data-dismiss="modal" class="btn btn-outline-dark">Cancel</button>
            <button type="submit" class="btn btn-primary">Save change</button>
        </div>
    </div>
}