@using BaseSource.ViewModels.BaoCao
@model List<ReportPawnHoldingVm>
@{
    ViewData["Title"] = "Báo cáo hợp đồng đang cho vay";
}

<div class="row">
    <!-- table  Lastest Tickets -->
    <div class="col-12 ">
        <div class="card shadow h-100 mb-4 ">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3 class="m-0 font-weight-bold">@ViewData["Title"]</h3>
            </div>
            <div class="card-body">
                <div class="row ">
                    <div class="col-md-12">

                        <div class="mb-3">
                            <form class="form-inline">
                                <div class="mb-3">
                                    <input type="date" class="form-control" id="from">
                                </div>
                                <div class="mb-3">
                                    <input type="date" class="form-control" id="to">
                                </div>
                                <div class="mb-3">
                                    <select class=" form-control" name="type">
                                        <option value="AL">Tất cả loại phiếu</option>
                                        <option value="AL">Tất cả loại phiếu</option>
                                        <option value="AL">Tất cả loại phiếu</option>
                                        <option value="AL">Tất cả loại phiếu</option>
                                        <option value="AL">Tất cả loại phiếu</option>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <select class=" form-control" name="type">
                                        <option value="AL">Tất cả loại phiếu</option>
                                        <option value="AL">Tất cả loại phiếu</option>
                                        <option value="AL">Tất cả loại phiếu</option>
                                        <option value="AL">Tất cả loại phiếu</option>
                                        <option value="AL">Tất cả loại phiếu</option>
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-primary mb-2"><i data-feather="search"></i> Tìm kiếm</button>
                            </form>
                             <form action="@Url.Action("Export_ReportPawnHolding","BaoCao")" method="post">
                                <div class="mb-2">
                                    <input type="hidden" class="form-control" name="from" value="@Context.Request.Query["from"]">
                                    <input type="hidden" class="form-control" name="to" value="@Context.Request.Query["to"]">
                                    <input type="hidden" class="form-control" name="loaihopdong" value="@Context.Request.Query["loaihopdong"]">
                                    <input type="hidden" class="form-control" name="user" value="@Context.Request.Query["user"]">
                                    <button type="submit" class="btn btn-success mb-2 ms-2"><i data-feather="file-text"></i> Excel</button>
                                </div>
                            </form>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th scope="col">
                                            #
                                        </th>
                                        <th scope="col">
                                            Loại hình
                                        </th>
                                        <th scope="col">
                                            Mã HĐ
                                        </th>
                                        <th scope="col">
                                            Tên khách hàng
                                        </th>
                                        <th scope="col">
                                            Tên hàng
                                        </th>
                                        <th scope="col">
                                            Ngày vay
                                        </th>
                                        <th scope="col">
                                            Tiền vay
                                        </th>
                                        <th scope="col">
                                            Tình trạng
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        var idx = 1;

                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@idx</td>
                                                <td>@item.LoaiHopDong</td>
                                                <td>@item.MaHD</td>
                                                <td>@item.TenKhachHang</td>
                                                <td>@item.TenHang</td>
                                                <td>@item.NgayVay</td>
                                                <td>@item.TienVay.ToString("N0")</td>
                                                <td>@item.TinhTrang</td>
                                            </tr>
                                            idx++;
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script>
        $(".expense-nav").addClass("active");
        $('.select-type').select2();
    </script>
}