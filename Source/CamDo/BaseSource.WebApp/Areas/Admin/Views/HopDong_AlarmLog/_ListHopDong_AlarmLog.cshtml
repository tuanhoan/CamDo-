@model List<HopDong_AlarmLogVm>
@{
    int idx = 1;
}
<div class="info-hd-header">
    <i class="fa fa-list"></i> Lịch sử hẹn giờ
</div>
<div class="list-tragoc">
    <table class="table table-bordered head-bg-gray table-hover">
        <thead>
            <tr>
                <th class="text-center">STT</th>
                <th class="text-center">Trạng thái</th>
                <th class="text-center">Hẹn đến ngày</th>
                <th class="text-center">Nội dung</th>
                <th class="text-center">Ngày tạo</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count > 0)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@idx</td>
                        <td>@(item.IsDisable?"Dừng hẹn giờ":"Hẹn giờ")</td>
                        <td>@item.AlarmDate?.ToString("dd/MM/yyyy")</td>
                        <td>@item.Note</td>
                        <td>@item.CreatedDate.ToString("HH:mm dd/MM/yyyy")</td>
                    </tr>
                    idx++;
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">Không có dữ liệu</td>
                </tr>
            }
        </tbody>
    </table>

</div>