@model ResetPasswordVm
@{
    ViewData["Title"] = "Đặt lại mật khẩu"; 
    Layout = "_AccountLayout";
}

<div id="account-form">
    <div class="form-panel small">
        <a asp-controller="Home" asp-action="Index">
            <img src="https://admin.mecash.vn/Template/assets/app/media/img//logos/logoNew.jpg" />
        </a>

        <h1 class="title">Đặt lại mậ khẩu</h1>
        <h2 class="description">Điền thông tin để có mật khẩu mới</h2>

        <form asp-action="ResetPassword" method="post">
            <input asp-for="Code" type="hidden" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <input type="text" asp-for="Email" class="account-input-field" placeholder="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="text" asp-for="Password" class="account-input-field" placeholder="Mật khẩu">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="text" asp-for="ConfirmPassword" class="account-input-field" placeholder="Xác nhận mật khẩu">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <center><button type="submit">Gửi yêu cầu</button></center>
        </form>
    </div>
</div>
