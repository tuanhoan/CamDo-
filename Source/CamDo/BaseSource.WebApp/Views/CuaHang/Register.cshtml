@model RegisterCuaHangVm
@{
    ViewData["Title"] = "Đăng ký cửa hàng";
    Layout = "_AccountLayout";
}

<div id="account-form">
    <div class="form-panel">
        <a asp-controller="Home" asp-action="Index">
            <img src="https://admin.mecash.vn/Template/assets/app/media/img//logos/logoNew.jpg" />
        </a>

        <h1 class="title">Đăng ký cửa hàng</h1>
        <h2 class="description">Điền thông tin để tạo cửa hàng</h2>

        <form data-name="ajaxForm" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <input type="text" asp-for="UserName" class="account-input-field" placeholder="Tên đăng nhập">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input type="password" asp-for="Password" class="account-input-field" placeholder="Mật khẩu">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input type="text" asp-for="FullName" class="account-input-field" placeholder="Họ tên">
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input type="text" asp-for="PhoneNumber" class="account-input-field" placeholder="Số điện thoại">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input type="text" asp-for="Address" class="account-input-field" placeholder="Địa chỉ">
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input type="text" asp-for="TenCuaHang" class="account-input-field" placeholder="Tên cửa hàng">
                <span asp-validation-for="TenCuaHang" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="VonDauTu"></label>
                <input id="VonDauTuDisplay" type="text" class="account-input-field" value="@Model.VonDauTu" />

                <input type="hidden" class="form-control" asp-for="VonDauTu">
                <span asp-validation-for="VonDauTu" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center">
                <button type="submit">Đăng ký</button>
                <a class="cancel-link" asp-controller="Account" asp-action="Login">Huỷ</a>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script>
        setMoneyTextBox("#VonDauTuDisplay")
    </script>
}


