@using BaseSource.ViewModels.BaiViet
@model TinhNangPageVm
@{
    ViewData["Title"] = "Tính năng";
}

<div id="feature">
    <div class="container">
        <div class="row">
            <div class="col-md-3 col-sm-12">
                <div class="left-menu">
                    <ul id="MenuTinhNang">
                       @foreach (var item in Model.menus)
                       {
                            @if(item.Url == Model.baiViet.Url)
                            {
                                <li class="active">
                                    <a href="/TinhNang?url=@item.Url">@item.Name</a>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <a href="/TinhNang?url=@item.Url">@item.Name</a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
            <div class="col-md-9 col-sm-12">
                @Html.Raw(@Model.baiViet.Content)
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(".tinhnang-nav").addClass("active");
    </script>
} 