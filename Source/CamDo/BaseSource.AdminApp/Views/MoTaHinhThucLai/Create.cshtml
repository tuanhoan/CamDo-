@model CreateMoTaHinhThucLaiAdminVm
@{
    ViewData["Title"] = "Thêm mới cấu hình hàng hóa";
}
<div>
    <div class="card shadow h-100">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="m-0 font-weight-bold">@ViewData["Title"]</h3>
            <a class="btn btn-sm btn-secondary shadow-sm" asp-action="Index"><i class="fas fa-arrow-left fa-fw fa-sm text-white-50"></i> Back</a>
        </div>

        <div class="card-body">
            <form asp-action="Create" data-name="ajaxForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <label asp-for="HinhThucLai" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <select class="form-control" asp-for="HinhThucLai" asp-items="@Html.GetEnumSelectList<EHinhThucLai>()">
                            <option selected="selected" value="">--Chọn loại--</option>
                        </select>
                        <span asp-validation-for="HinhThucLai" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="TyLeLai" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="TyLeLai" class="form-control " />
                        <span asp-validation-for="TyLeLai" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="ThoiGian" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="ThoiGian" class="form-control " />
                        <span asp-validation-for="ThoiGian" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="MoTaKyLai" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="MoTaKyLai" class="form-control " />
                        <span asp-validation-for="MoTaKyLai" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts{
    <script>
        $(".motahinhthuclai-nav").addClass("active");
    </script>
}   