@model EditNotifySystemVm
@{
    ViewData["Title"] = "Cập nhật thông báo";
}

<div>

    <div class="card shadow h-100">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="m-0 font-weight-bold">@ViewData["Title"]</h3>
            <a class="btn btn-sm btn-secondary shadow-sm" asp-action="Index"><i class="fas fa-arrow-left fa-fw fa-sm text-white-50"></i> Back</a>
        </div>

        <div class="card-body">
            <form asp-action="Edit" data-name="ajaxForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @Html.HiddenFor(x => x.Id)
                <div class="form-group row">
                    <label asp-for="Title" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="Title" class="form-control " />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Url" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="Url" class="form-control " />
                        <span asp-validation-for="Url" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="StartTime" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="StartTime" class="form-control " />
                        <span asp-validation-for="StartTime" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="EndTime" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="EndTime" class="form-control " />
                        <span asp-validation-for="EndTime" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts{
    <script>
        $(".notifysystem-nav").addClass("active");
    </script>
}   